<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/profile_picture"
                android:layout_marginTop="20dp"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/changeProfilePhoto"
                android:text="@string/change_profile_picture"
                android:layout_below="@+id/profile_picture"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@color/blue"/>

            <!--display username section-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/changeProfilePhoto"
                android:background="@drawable/grey_border_bottom"
                android:layout_marginTop="40dp"
                android:id="@+id/relativeLayout1">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/display_name_img"
                    android:src="@drawable/ic_display"
                    android:layout_centerVertical="true" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/display_name"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/display_name_img"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:inputType="textNoSuggestions"
                    android:background="@null"
                    android:hint="ck_douglas"/>
            </RelativeLayout>

            <!--display username section-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relativeLayout1"
                android:background="@drawable/grey_border_bottom"
                android:id="@+id/relativeLayout2">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/user_name_img"
                    android:src="@drawable/ic_username"
                    android:layout_centerVertical="true" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_name"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/user_name_img"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:inputType="textNoSuggestions"
                    android:background="@null"
                    android:hint="ck douglas"/>
            </RelativeLayout>

            <!--display website section-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relativeLayout2"
                android:background="@drawable/grey_border_bottom"
                android:id="@+id/relativeLayout3">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/user_website_img"
                    android:src="@drawable/ic_website"
                    android:layout_centerVertical="true" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_website"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/user_website_img"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:inputType="textNoSuggestions"
                    android:background="@null"
                    android:hint="ckdouglas.org"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relativeLayout3"
                android:background="@drawable/grey_border_bottom"
                android:id="@+id/relativeLayout4">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/user_bio_img"
                    android:src="@drawable/ic_location"
                    android:layout_centerVertical="true" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_bio"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/user_bio_img"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:inputType="textNoSuggestions"
                    android:background="@null"
                    android:hint="I live in Nairobi,Kenya"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout4"
                android:layout_marginTop="50dp"
                android:text="Private Information"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:textSize="19sp"
                android:id="@+id/personalInformation"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/personalInformation"
                android:background="@drawable/grey_border_bottom"
                android:id="@+id/relativeLayout5">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/user_email_img"
                    android:src="@drawable/ic_email"
                    android:layout_centerVertical="true" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_email"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/user_email_img"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:inputType="textNoSuggestions"
                    android:background="@null"
                    android:hint="douglas.ck.work@gmail.com"/>
            </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/relativeLayout5"
            android:background="@drawable/grey_border_bottom"
            android:id="@+id/relativeLayout6">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/user_phone_img"
                android:src="@drawable/ic_mobile"
                android:layout_centerVertical="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_phone"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/user_phone_img"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:inputType="textNoSuggestions"
                android:background="@null"
                android:hint="0729731548"/>
        </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</merge>